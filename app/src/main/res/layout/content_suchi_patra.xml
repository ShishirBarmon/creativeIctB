<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0B6B6"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/content_suchi_patra">

    <fragment
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/mobile_navigation" />

    <Button
        android:id="@+id/chapter1"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Chapter 01"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corner"
        app:layout_constraintStart_toStartOf="@id/nav_host_fragment"
        app:layout_constraintEnd_toEndOf="@id/nav_host_fragment"/>


    <Button
        android:id="@+id/chapter2"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Chapter 02"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_corner"
        app:layout_constraintStart_toStartOf="@id/nav_host_fragment"
        app:layout_constraintEnd_toEndOf="@id/nav_host_fragment"/>

    <Button
        android:id="@+id/chapter3"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Chapter 03"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="180dp"
        android:background="@drawable/rounded_corner"
        app:layout_constraintStart_toStartOf="@id/nav_host_fragment"
        app:layout_constraintEnd_toEndOf="@id/nav_host_fragment"/>

    <Button
        android:id="@+id/chapter4"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Chapter 04"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="260dp"
        android:background="@drawable/rounded_corner"
        app:layout_constraintStart_toStartOf="@id/nav_host_fragment"
        app:layout_constraintEnd_toEndOf="@id/nav_host_fragment"/>

    <Button
        android:id="@+id/chapter5"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Chapter 05"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="340dp"
        android:background="@drawable/rounded_corner"
        app:layout_constraintStart_toStartOf="@id/nav_host_fragment"
        app:layout_constraintEnd_toEndOf="@id/nav_host_fragment"/>


    <Button
        android:id="@+id/chapter6"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Chapter 06"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="420dp"
        android:background="@drawable/rounded_corner"
        app:layout_constraintStart_toStartOf="@id/nav_host_fragment"
        app:layout_constraintEnd_toEndOf="@id/nav_host_fragment"/>



</androidx.constraintlayout.widget.ConstraintLayout>